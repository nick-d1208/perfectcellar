<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vitaminlondon.perfectcellar" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PerfectCellar</name>
    <description>
        Perfect cellar - Find the best wine for you
    </description>
    <author email="checkup@vitaminlondon.com" href="http://www.vitaminlondon.com">
       Vitamin London team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
   
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
     <preference name="AutoHideSplashScreen" value="false" />
     <preference name="SplashScreenDelay" value="400" />
     <preference name="FadeSplashScreenDuration" value="400"/>
     <preference name="FadeSplashScreen" value="true"/>
</widget>
